<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="@dimen/margin_horizontal_12dp"
    android:background="@color/teal_700"
    tools:context=".MainActivity2">

    <EditText
        android:id="@+id/et_some_text"
        style="@style/TextView.Base"
        android:hint="@string/type_text"
        android:importantForAutofill="no"
        android:textColorHint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_send_to"
        style="@style/Button.Base"
        android:layout_marginTop="@dimen/margin_top_16dp"
        android:text="@string/send_data"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_some_text"/>
</androidx.constraintlayout.widget.ConstraintLayout>